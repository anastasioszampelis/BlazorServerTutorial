<p>@Message</p>
<button class="btn btn-primary" @onclick="OkHandler">Submit</button>
<button class="btn btn-secondary" @onclick="CancelHandler">Cancel</button>
@code {
    [CascadingParameter]
    BlazoredModalInstance BlazoredModal { get; set; }

    [Parameter]
    public string Message { get; set; }

    void OkHandler()
    {
        BlazoredModal.Close();
    }

    void CancelHandler()
    {
        BlazoredModal.Cancel();
    }
}
